/* /pages/submit/submit.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #F4F4F4;
} 
.wrap {
  margin: 0px 20px;
  text-align: left;
  padding:40rpx;
}
/* form style */
.user-input {
  margin-bottom:25rpx;
}
.input-height {
  height: 10em;
}
textarea {
  padding: 10rpx 0;
  font-size: 35rpx;
  color: red;
}
.text-area-wrp {
  padding: 15rpx 15rpx;
  background-color: #fff;
  margin-top:8px;
  border-radius: 2px;
  border-left: 5px solid #9F9F9C;
}
