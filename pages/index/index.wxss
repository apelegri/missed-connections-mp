/**index.wxss**/
.wrap-welcome {
  width: 100%;
  height: 250rpx;
  background-color: #F95959;
  color: white;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 23px;
}

.container-cards {
  height: 100%;
  padding: 40rpx;
}

.card {
  background-color: #E3E3E3;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  border-top: solid 1rpx white;
  padding: 20rpx;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx 0rpx 20rpx;
}

.userinfo-avatar {
  width: 65rpx;
  height: 65rpx;
  /*margin: 20rpx;*/
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 14px;
  margin-left: 20rpx;
}

.post-card {
  margin-top: 20rpx;
  font-size: 15px;
  padding-top: 5px;
}


/*Btn*/
.wrap-cta {
  position: absolute;
}
.submit-cta {
  background-color: lightgray;
  color: white;
  padding: 20rpx 20rpx;
  margin-top:12px;
  border-radius: 100%;
  width: 40px;
  height: 40px;
  text-align: center;
  vertical-align: center;
  font-weight: bolder;
 font-size:39px;
  position: relative;
  left:250px;
  top:100px;


}

.post-body-text{
  color: #000;
}

