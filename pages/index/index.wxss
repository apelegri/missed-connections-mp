/**index.wxss**/
.wrap-welcome {
  width: 100%;
  height: 250rpx;
  background-color: #F95959;
  color: white;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 23px;
}

.container-cards {
  width: 100%;
  height: 100%;
  padding: 18px;
}

.card {
  width: 100%;
  background-color: #E3E3E3;
  border-radius: 8px;
  margin: 0 auto;
  padding: 10px;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 65rpx;
  height: 65rpx;
  /*margin: 20rpx;*/
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 14px;
  margin-left: 20rpx;
}

.usermotto {
  margin-top: 20rpx;
  font-size: 15px;
  border-top: solid 1rpx white;
  padding-top: 5px;
}

